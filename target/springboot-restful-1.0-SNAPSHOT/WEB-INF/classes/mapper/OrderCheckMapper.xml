    <delete id="deleteOrderCheck">
        delete from
        OrderCheck
        where OCIN = #{ocin}
    </delete>
    
    <select id="findOrderCheckByOCIN" resultType="org.spring.springboot.domain.OrderCheck">
        select
        <include refid="Base_Column_List"/>
        from OrderCheck
        where OCIN = #{ocin}
    </select>
    
    <select id="findAllOrderCheck" resultType="org.spring.springboot.domain.OrderCheck">
        select
        *
        from OrderCheck
    </select>
    
    <update id="modifyOrderCheck">
        update
        OrderCheck
        <trim prefix="set" suffixOverrides=",">
            <if test="OCIN!=null">
                OCIN = #{OCIN},
            </if>
            <if test="OBIN!=null">
                OBIN = #{OBIN},
            </if>
            <if test="CSIN!=null">
                CSIN = #{CSIN},
            </if>
            <if test="orderTime!=null">
                orderTime = #{orderTime},
            </if>
            <if test="checkInTime!=null">
                checkInTime = #{checkInTime},
            </if>
            <if test="checkOutTime!=null">
                checkOutTime = #{checkOutTime},
            </if>
            <if test="roomTypeTitle!=null">
                roomTypeTitle = #{roomTypeTitle},
            </if>
            <if test="roomPlate!=null">
                roomPlate = #{roomPlate},
            </if>
            <if test="roomPrice!=null">
                roomPrice = #{roomPrice},
            </if>
            <if test="VIP!=null">
                VIP = #{VIP},
            </if>
            <if test="vipLevel!=null">
                vipLevel = #{vipLevel},
            </if>
            <if test="discount!=null">
                discount = #{discount},
            </if>
            <if test="finalPrice!=null">
                finalPrice = #{finalPrice},
            </if>
            <if test="paymentMethod!=null">
                paymentMethod = #{paymentMethod},
            </if>
        </trim>
        where
        OCIN = #{OCIN}
    </update>

</mapper>